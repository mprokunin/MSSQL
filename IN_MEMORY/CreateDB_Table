CREATE DATABASE [TST]
 CONTAINMENT = NONE
 ON  PRIMARY 
( NAME = N'TST', FILENAME = N'E:\DB\TST.mdf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
 LOG ON 
( NAME = N'TST_log', FILENAME = N'E:\LOG\TST_log.ldf' , SIZE = 8192KB , FILEGROWTH = 65536KB )
GO
