CREATE TABLE [dbo].[Portfolio](
	[FirmId] [varchar](12) NOT NULL,
	[ClientCode] [varchar](12) NOT NULL,
	[CurrCode] [varchar](4) NOT NULL,
	[Tag] [varchar](4) NOT NULL,
	[LimitKind] [varchar](5) NOT NULL,
	[Margin] [decimal](19, 8) NULL,
	[Leverage] [decimal](19, 2) NULL,
	[OpenLimit] [decimal](19, 8) NULL,
	[ValShort] [decimal](19, 8) NULL,
	[ValLong] [decimal](19, 8) NULL,
	[ValLongMargin] [decimal](19, 8) NULL,
	[ValLongAsset] [decimal](19, 8) NULL,
	[LimAll] [decimal](19, 8) NULL,
	[AvLimAll] [decimal](19, 8) NULL,
	[LockedBuy] [decimal](19, 8) NULL,
	[LockedBuyMargin] [decimal](19, 8) NULL,
	[LockedBuyAsset] [decimal](19, 8) NULL,
	[LockedSell] [decimal](19, 8) NULL,
	[LockedValueCoef] [decimal](19, 8) NULL,
	[LimBuy] [decimal](19, 8) NULL,
	[LimSell] [decimal](19, 8) NULL,
	[LimNonMargin] [decimal](19, 8) NULL,
	[LimBuyAsset] [decimal](19, 8) NULL,
	[OpenPos] [decimal](19, 8) NULL,
	[InAllAssets] [decimal](19, 8) NULL,
	[InAssets] [decimal](19, 8) NULL,
	[AllAssets] [decimal](19, 8) NULL,
	[Assets] [decimal](19, 8) NULL,
	[ProfitLoss] [decimal](19, 8) NULL,
	[RateChange] [decimal](19, 8) NULL,
	[CurentBal] [decimal](19, 8) NULL,
	[MoneyLocked] [decimal](19, 8) NULL,
	[CurLeverage] [decimal](19, 2) NULL,
	[DeltaAssets] [decimal](19, 8) NULL,
	[MarginType] [varchar](4) NULL,
	[IsFutures] [varchar](16) NULL,
	[GoForPositions] [decimal](19, 8) NULL,
	[GoForOrders] [decimal](19, 8) NULL,
	[VarMargin] [decimal](19, 8) NULL,
	[IsQualClient] [varchar](16) NULL,
	[PortfolioValue] [decimal](19, 8) NULL,
	[InitMargin] [float] NULL,
	[MinMargin] [float] NULL,
	[CorrectedMargin] [float] NULL,
	[Haircuts] [decimal](19, 4) NULL,
	[RCV1] [float] NULL,
	[RCV2] [float] NULL,
 CONSTRAINT [PK_Portfolio_1] PRIMARY KEY NONCLUSTERED 
(
	[FirmId] ASC,
	[ClientCode] ASC,
	[CurrCode] ASC,
	[Tag] ASC,
	[LimitKind] ASC
)
) WITH (MEMORY_OPTIMIZED = ON,DURABILITY = SCHEMA_AND_DATA)
GO
